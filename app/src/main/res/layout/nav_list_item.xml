<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/nav_selector">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/logo"
        android:background="@drawable/nav_list_item_icon_background"
        android:layout_centerVertical="true"
        android:padding="7dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/icon"
        android:minHeight="@dimen/nav_item_height"
        android:duplicateParentState="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@drawable/nav_item_text_selector"
        android:gravity="center_vertical"
        android:textSize="@dimen/nav_list_text_size" />

</RelativeLayout>