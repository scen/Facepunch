<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RealLoginTheme" parent="LoginTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">@bool/transparent_nav</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">@bool/transparent_nav</item>
    </style>
    <style name="Theme.Maintheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_maintheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Maintheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Maintheme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Maintheme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Maintheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Maintheme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_maintheme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_maintheme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Maintheme</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">@bool/transparent_nav</item>
        <item name="android:actionOverflowButtonStyle">@style/overflow</item>
    </style>
    <style name="CardListView" parent="Theme.Maintheme">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/card_bottom_padding</item>
        <item name="android:layout_margin">@dimen/card_bottom_padding</item>
        <!--<item name="android:paddingTop">@dimen/card_bottom_padding</item>-->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">none</item>
        <item name="android:drawSelectorOnTop">true</item>
        <!--<item name="android:listSelector">@android:color/transparent</item>-->
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:background">@color/card_listview_background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>