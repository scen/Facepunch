<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">

    </style>
    <style name="RealLoginTheme" parent="LoginTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CardListView" parent="Theme.Maintheme">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/card_bottom_padding</item>
        <item name="android:padding">@dimen/card_bottom_padding</item>
        <!--<item name="android:paddingTop">@dimen/card_bottom_padding</item>-->
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">none</item>
        <item name="android:drawSelectorOnTop">true</item>
        <!--<item name="android:listSelector">@android:color/transparent</item>-->
        <item name="android:clipToPadding">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:background">@color/card_listview_background</item>
    </style>
</resources>
